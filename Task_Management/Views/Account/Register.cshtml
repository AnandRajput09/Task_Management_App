@{
    ViewBag.Title = "Register";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 24rem;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Create a New Account</h3>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                <div class="form-group mb-4">
                    <input type="text" class="col-12 form-control form-control-lg" id="role" name="role" value="User" disabled />
                </div>

                <div class="form-group mb-4">
                    <input type="text" class="col-12 form-control form-control-lg" id="username" name="username" placeholder="Enter your username" required />
                </div>

                <div class="form-group mb-4">
                    <input type="password" class="col-12 form-control form-control-lg" id="password" name="password" placeholder="Enter your password" required />
                </div>

                <div class="form-group mb-4">
                    <input type="password" class="col-12 form-control form-control-lg" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-block w-100">Register</button>
                </div>
            }

            <div class="text-center mt-3">
                <p>Already registered? <a href="@Url.Action("Login", "Account")">Login Here</a></p>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger mt-3 text-center">@ViewBag.ErrorMessage</div>
            }
        </div>
    </div>
</div>
