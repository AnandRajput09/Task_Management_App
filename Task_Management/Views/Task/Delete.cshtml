@{
    ViewBag.Title = "Delete Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center" style="padding-top: 30px; padding-bottom: 30px;">
    <div class="card shadow-lg" style="width: 30rem; background-color: #f7f7f7; padding: 20px;">
        <div class="card-body">
            <h2 class="text-danger text-center">Delete Task</h2>

            <p class="text-center">Are you sure you want to delete the following task?</p><br />

                <div class="mb-3">
                    <strong>Title:</strong>
                    <p class="text-muted">@ViewBag.Task.Title</p>
                </div>

                <div class="mb-3">
                    <strong>Description:</strong>
                    <p class="text-muted" style="white-space: pre-wrap;">@ViewBag.Task.Description</p>
                </div>

                <div class="mb-3">
                    <strong>Status:</strong>
                    <p class="text-muted">@ViewBag.Task.Status</p>
                </div>

                <div class="mb-3">
                    <strong>Assigned To:</strong>
                    <p class="text-muted">@ViewBag.Task.AssignedTo</p>
                </div>

                <div class="mb-3">
                    <strong>Created At:</strong>
                    <p class="text-muted">@ViewBag.Task.CreatedAt</p>
                </div>

                <div class="mb-3">
                    <strong>Updated At:</strong>
                    <p class="text-muted">@ViewBag.Task.UpdatedAt</p>
                </div>

            <form action="@Url.Action("DeleteConfirmed", "Task", new { id = ViewBag.Task.TaskId })" method="post" class="text-center">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
